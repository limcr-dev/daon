<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
<mapper namespace="com.spring.daon.common.CommonMapper">
	
	<!-- 출근 버튼 클릭 시 -->
	<select id="getEmpInfo" parameterType="int" resultType="com.spring.daon.hrMgt.Employees">
		select * from employees
		where emp_no = #{emp_no}
	</select>
</mapper>