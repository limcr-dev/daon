<mapper namespace="com.spring.daon.messenger.MessengerMapper">

	<!-- 주소록 목록 조회 -->
	<select id="abList" resultType="com.spring.daon.hrMgt.Employees">
		SELECT *
		FROM employees
		WHERE leave_date IS NULL
		ORDER BY emp_no ASC
	</select>
	
